{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:umd:min && npm run build:types",
    "build:cjs": "lerna exec --stream -- BABEL_ENV=cjs babel --root-mode upward src --out-dir ./dist --source-maps --out-file-extension .cjs",
    "build:esm": "lerna exec --stream -- babel --root-mode upward src --out-dir ./dist --source-maps",
    "build:umd": "lerna exec --stream -- rollup -c ../../rollup.config.mjs",
    "build:umd:min": "lerna exec --stream -- rollup -c ../../rollup.config.minify.mjs",
    "build:types": "lerna exec --stream -- tsc --allowJs -d --emitDeclarationOnly --outDir dist src/*.js",
    "clean": "lerna exec -- rimraf dist",
    "format": "prettier --write .",
    "lint": "eslint --ext js --ext cjs --ext mjs .",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "lint-staged": {
    "*.{cjs,js,mjs,ts}": "eslint --cache --fix",
    "*.{cjs,js,json,mjs,ts}": "prettier --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "babel-jest": "^28.1.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lerna": "^5.1.4",
    "lint-staged": "^13.0.1",
    "lodash": "^4.17.21",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.6",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^4.7.3"
  }
}
